<Window
    x:Class="Avalonia.WebView2.Sample.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:wv2="clr-namespace:Avalonia.WebView;assembly=Avalonia.WebView2"
    xmlns:local="using:Avalonia.WebView2.Sample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Avalonia.WebView2.Sample"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
	<Grid RowDefinitions="Auto *">
		<TextBox
			x:Name="UrlTextBox"
			Grid.Row="0"
			Watermark="Enter the URL address and press enter to navigate" />

		<wv2:WebView2 x:Name="webview" Grid.Row="1" Fill="Violet" Source="https://www.bing.com"/>
	</Grid>
</Window>
